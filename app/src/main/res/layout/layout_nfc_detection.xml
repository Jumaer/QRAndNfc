<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/img_no_data"
        android:layout_width="0dp"
        android:layout_height="@dimen/_116sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/mobile_nfc_scanner"
        tools:visibility="visible" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        style="@style/MaterialButtonStyle2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:backgroundTint="@color/scan_normal"
        android:textAlignment="center"
        android:paddingHorizontal="@dimen/_56sdp"
        android:text="@string/close"
        android:textAllCaps="false"
        android:textColor="@color/red_cancel"
        android:textSize="@dimen/_11ssp"
        app:cornerRadius="@dimen/_25sdp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


